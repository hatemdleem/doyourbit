    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<script type="text/javascript">

  

    function imageClick(url) {
        window.location = url;
    }
</script>
<style>

    h1 {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        color: black;
    }

    h2 {
        font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;
        color: black;
        font-size: 30px;
    }

    p {
        font-family: 'Times New Roman';
        color: black;
        font-size: medium;
    }
