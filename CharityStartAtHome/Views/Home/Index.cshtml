@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/images/home2.png" alt="Norway" style="width:100%; height:100%">
            <div class="carousel-caption">
                <div class="centered">
                    <h1 style="color:white">Why only donate money when you can do so much more?</h1>
                </div>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/images/Charity2V.jpg" alt="Norway" style="width:100%; height:100%">
            <div class="carousel-caption">
                <div class="centered" style="margin-bottom:80px;">
                    <h1 style="color:white">It’s better to donate old clothes than accumulate</h1>
                    <hr class="style-three">
                    <p style="font-size:25px;">The shirt you no longer need, can help someone else. </p>
                </div>
                @Html.ActionLink("Learn More", "Clothm", "Clothes", null, new { value = "98998", id = "2", @class = "my-class btn btn-success btn-lg" })
            </div>
        </div>

        <div class="item">
            <img src="~/Content/images/charityV3.jpg" alt="Norway" style="width:100%; height:100%">
            <div class="carousel-caption">
                <div class="centered" style="margin-bottom:80px;">
                    <h1 style="color:white;">Donate your time today</h1>
                    <hr class="style-three">
                    <p style="font-size:25px;">We make a life by what we give.</p>
                </div>
                @Html.ActionLink("Learn More", "Time", "Viccharities", null, new { @class = "my-class btn btn-success btn-lg", value = "98998", id = "2" })
            </div>
        </div>

        <div class="item">
            <img src="~/Content/images/CharityV4.jpg" alt="Norway" style="width:100%; height:100%" />
            <div class="carousel-caption">
                <div class="centered" style="margin-bottom:80px;">
                    <h1 style="color:white">You don’t have to be a doctor to save lives</h1>
                    <hr class="style-three">
                    <p style="color:white; font-size:25px">You can save lives by giving blood.</p>
                </div>
                <div class="text-center">@Html.ActionLink("Learn More", "Bloodm", "Bloods", null, new { value = "98998", id = "2", @class = "my-class btn btn-success btn-lg" })</div>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 tetx-center">
            <h1>Charity begins at home.</h1>
            <h1>But should not end there.</h1>
            <br>
            <p>At Do your Bit, we believe that charity in any form can be the most self-less thing you can do for someone. Be the change you wish to see in the world! </p>
            <br>
            <hr class="style-two" style="width:80%">
            <h1 style="margin-top:70px;">Do your bit today!</h1>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <img src="~/Content/images/icon-clothes2.jpg" alt="Norway" style="width:90%; height:250px">

            <h2 class="header smallest text-center" style="margin-top:30px">Donate Clothes</h2>
            <div class="text-center">
                <p>Find out more about how and </p>
                <p>where you can donate clothes.</p>
            </div>
            <div class="text-center">
                @Html.ActionLink("Learn More", "Clothm", "Clothes", null, new { value = "98998", id = "2", @class = "my-class btn btn-success btn-lg" })
            </div>
        </div>
        <div class="col-sm-3" style="margin-left:30px">
            <img src="~/Content/images/icon-blood2.jpg" alt="Norway" style="width:100%; height:250px">

            <h2 class="header smallest text-center" style="margin-top:30px">Give Blood</h2>
            <div class="text-center">
                <p>Learn more about the blood</p>
                <p>donation and your eligibility.</p>
            </div>
            <div class="text-center">@Html.ActionLink("Learn More", "Bloodm", "Bloods", null, new { value = "98998", id = "2", @class = "my-class btn btn-success btn-lg" })</div>
        </div>
        <div class="col-sm-4" style="margin-left:50px">
            <img src="~/Content/images/icon-clock2.jpg" alt="Norway" style="width:80%; height:250px; margin-left:50px">

            <h2 class="header smallest text-center" style="margin-top:30px">Donate Time</h2>
            <div class="text-center">
                <p>Find out more about why you </p>
                <p>should volunteer and where.</p>
            </div>
            <div class="text-center">@Html.ActionLink("Learn More", "Time", "Viccharities", null, new { @class = "my-class btn btn-success btn-lg", value = "98998", id = "2" })</div>
        </div>
    </div>
</div>

<div class="sideLinks">
    @Html.ActionLink("donate clothes", "List", "Clothes", null, new { @style = "align: right", @class = "my-class btn btn-success btn-lg", value = "98998", id = "2" })
    @Html.ActionLink("Donate time   ", "List", "Viccharities", null, new { @style = "align: right", @class = "my-class btn btn-success btn-lg", value = "98998", id = "2" })
    @Html.ActionLink("Give blood    ", "List", "Bloods", null, new { @style = "align: right", @class = "my-class btn btn-success btn-lg", value = "98998", id = "2" })
</div>