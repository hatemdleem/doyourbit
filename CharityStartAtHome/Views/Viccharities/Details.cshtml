@model CharityStartAtHome.Models.Viccharity

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb" style="margin-top:50px">
    <li>@Html.ActionLink("What I can do", "Clothm", "Viccharities")</li>
    <li>@Html.ActionLink("Where I can give", "List", "Viccharities")</li>
    <li style="color:black">Vic Charity </li>
</ul>

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>Where to donate</h1>
            <h2>@Html.DisplayFor(model => model.Name)</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>Main Activity:</h4>
        </div>
        <div class="col-sm-7">
            <label>@Html.DisplayFor(model => model.MainActivit)</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>Address: </h4>
        </div>
        <div class="col-sm-7">
            <label>@Html.DisplayFor(model => model.City) @Html.DisplayFor(model => model.Address1)</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>@Html.DisplayNameFor(model => model.Postcode):</h4>
        </div>
        <div class="col-sm-7">
            <label>@Html.DisplayFor(model => model.Postcode)</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>@Html.DisplayNameFor(model => model.Purposes):</h4>
        </div>
        <div class="col-sm-7">
            <label>@Html.DisplayFor(model => model.Purposes)</label>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>@Html.DisplayNameFor(model => model.State):</h4>
        </div>
        <div class="col-sm-7">
            <label>@Html.DisplayFor(model => model.State)</label>
        </div>
    </div>

    <div id="floating-panel">
        <select id="mode" class="btn btn-success">
            <option value="DRIVING">Driving</option>
            <option value="WALKING">Walking</option>
            <option value="BICYCLING">Bicycling</option>
            <option value="TRANSIT">Transit</option>
        </select>
    </div>

    <div class="row">
        <div class="col-xs-12 text-center">
            <hr class="style-two" style="width:80%; margin-top:70px">
            <h2>Location map & Café Nearby</h2>
        </div>
        <div class="col-xs-8">
            <div id="details_map"></div>
        </div>
        <div class="col-xs-4">
            <div id="right-panel"></div>
        </div>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        address = "@Model.City @Model.Address1";
        initDetails();
    });
</script>